<!-- Header -->
<header id="header">
    
    <div class="inner">

        <div class="upper">
            <!-- Logo -->
            <a class="logo" asp-area="" asp-controller="Home" asp-action="Index">
                <span class="symbol"><img src="~/images/logo.svg" alt="" /></span><span class="title">Erratas</span>
            </a>
        </div>

        <form method="POST" asp-area="" asp-controller="Home" asp-action="Search">
            <div class="search-div">
                <input type="text" name="query" id="query" class="search-input" placeholder="Search post" />
                <input type="image" alt="Search" src="https://img.icons8.com/android/480/000000/search.png" />
            </div>
        </form>


        <!-- Nav -->
        <nav>
            <ul>
                <li><a href="#menu">Menu</a></li>
            </ul>
        </nav>

    </div>
</header>